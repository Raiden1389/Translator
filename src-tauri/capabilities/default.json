{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close",
    "fs:default",
    "dialog:default",
    "log:default",
    "shell:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APP_DATA/**"
        },
        {
          "path": "$DOWNLOADS/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "H:/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$APP_DATA/**"
        },
        {
          "path": "$DOWNLOADS/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "H:/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APP_DATA/**"
        },
        {
          "path": "$DOWNLOADS/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "H:/**"
        }
      ]
    }
  ]
}